
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow authenticated users to write to a folder matching their user ID
    match /tradTest/{userId}/{allPaths=**} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow public read access to uploaded test files so candidates can download them
    match /tradTest/{userId}/{allPaths=**} {
      allow read;
    }
    
    // Allow candidates to upload their submissions
    match /test-submissions/{postId}/{candidateId}/{fileName} {
      allow write: if request.auth != null && request.auth.uid == candidateId;
    }
  }
}

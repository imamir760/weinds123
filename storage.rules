rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read access to test files if needed (adjust as necessary)
    match /traditional-tests/{employerId}/{postId}/{fileName} {
      allow read;
      // Allow write only if the user is authenticated and is the owner (employer)
      allow write: if request.auth != null && request.auth.uid == employerId;
    }
    
    match /test-submissions/{postId}/{candidateId}/{fileName} {
      allow read, write: if request.auth != null && request.auth.uid == candidateId;
    }
  }
}

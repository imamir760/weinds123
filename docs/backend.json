
{
  "entities": {
    "User": {
      "title": "User",
      "description": "Represents a user for authentication purposes.",
      "type": "object",
      "properties": {
        "uid": {
          "type": "string",
          "description": "The user's unique ID."
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "The user's email address."
        },
        "displayName": {
          "type": "string",
          "description": "The user's display name, which could be a person's name, company name, or institution name."
        },
        "role": {
          "type": "string",
          "description": "The user's role.",
          "enum": ["candidate", "employer", "tpo"]
        },
        "createdAt": {
            "type": "string",
            "format": "date-time",
            "description": "The timestamp when the user was created."
        }
      },
      "required": ["uid", "email", "role", "createdAt"]
    },
    "CandidateProfile": {
      "title": "Candidate Profile",
      "description": "Stores detailed profile information for a candidate.",
      "type": "object",
      "properties": {
        "fullName": { "type": "string" },
        "email": { "type": "string", "format": "email" },
        "headline": { "type": "string" },
        "skills": { 
          "type": "array", 
          "description": "An array of the candidate's skills.",
          "items": { "type": "string" }
        },
        "experience": { 
          "type": "array",
          "description": "A list of the candidate's work experiences.",
          "items": {
            "type": "object",
            "properties": {
              "jobTitle": { "type": "string" },
              "company": { "type": "string" },
              "duration": { "type": "string" }
            }
          }
        },
        "education": { 
          "type": "array",
          "description": "A list of the candidate's educational qualifications.",
          "items": {
            "type": "object",
            "properties": {
              "institution": { "type": "string" },
              "degree": { "type": "string" },
              "year": { "type": "string" }
            }
          }
        },
        "location": { "type": "string" },
        "employmentStatus": { "type": "string", "enum": ["Fresher", "Working", "Studying"] },
        "preference": { "type": "string", "enum": ["Job", "Internship", "Both"] },
        "achievements": { 
          "type": "array", 
          "description": "A list of the candidate's achievements.",
          "items": {
            "type": "object",
            "properties": {
              "description": { "type": "string" }
            }
          }
        },
        "projects": { 
          "type": "array",
          "description": "A list of the candidate's projects.",
           "items": {
            "type": "object",
            "properties": {
              "title": { "type": "string" },
              "url": { "type": "string", "format": "uri" },
              "description": { "type": "string" }
            }
          }
        },
        "phone": { "type": "string" },
        "githubUrl": { "type": "string", "format": "uri" },
        "linkedinUrl": { "type": "string", "format": "uri" },
        "portfolioUrl": { "type": "string", "format": "uri" }
      }
    },
    "EmployerProfile": {
      "title": "Employer Profile",
      "description": "Stores detailed profile information for an employer.",
      "type": "object",
      "properties": {
        "companyName": { "type": "string" },
        "email": { "type": "string", "format": "email" },
        "website": { "type": "string", "format": "uri" },
        "tagline": { "type": "string" },
        "description": { "type": "string" },
        "industry": { "type": "string" },
        "companySize": { "type": "string" }
      }
    },
    "InstituteProfile": {
      "title": "Institute Profile",
      "description": "Stores detailed profile information for a TPO's institution.",
      "type": "object",
      "properties": {
        "institutionName": { "type": "string" },
        "tpoEmail": { "type": "string", "format": "email" },
        "website": { "type": "string", "format": "uri" },
        "description": { "type": "string" },
        "tpoName": { "type": "string" }
      }
    },
    "Job": {
      "title": "Job",
      "description": "Represents a job posting.",
      "type": "object",
      "properties": {
        "title": { "type": "string" },
        "responsibilities": { "type": "string" },
        "skills": { "type": "string" },
        "experience": { "type": "string" },
        "salary": { "type": "string" },
        "location": { "type": "string" },
        "workMode": { "type": "string", "enum": ["Remote", "Hybrid", "On-site"] },
        "education": { "type": "string" },
        "employerId": { "type": "string" },
        "createdAt": { "type": "string", "format": "date-time" },
        "pipeline": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "stage": { "type": "string" },
                    "type": { "type": "string" }
                }
            }
        }
      },
      "required": ["title", "responsibilities", "skills", "employerId", "createdAt"]
    },
    "Internship": {
      "title": "Internship",
      "description": "Represents an internship posting.",
      "type": "object",
      "properties": {
        "title": { "type": "string" },
        "responsibilities": { "type": "string" },
        "skills": { "type": "string" },
        "experience": { "type": "string" },
        "stipend": { "type": "string" },
        "duration": { "type": "string" },
        "location": { "type": "string" },
        "workMode": { "type": "string", "enum": ["Remote", "Hybrid", "On-site"] },
        "education": { "type": "string" },
        "employerId": { "type": "string" },
        "createdAt": { "type": "string", "format": "date-time" },
        "pipeline": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "stage": { "type": "string" },
                    "type": { "type": "string" }
                }
            }
        }
      },
      "required": ["title", "responsibilities", "skills", "employerId", "createdAt"]
    },
    "Application": {
        "title": "Application",
        "description": "Represents a candidate's application for a job or internship.",
        "type": "object",
        "properties": {
            "postId": { "type": "string" },
            "postTitle": { "type": "string" },
            "companyName": { "type": "string" },
            "appliedOn": { "type": "string", "format": "date-time" },
            "status": { "type": "string" }
        },
        "required": ["postId", "postTitle", "companyName", "appliedOn", "status"]
    },
    "Applicant": {
        "title": "Applicant",
        "description": "Represents an applicant for a job or internship.",
        "type": "object",
        "properties": {
            "candidateId": { "type": "string" },
            "appliedOn": { "type": "string", "format": "date-time" },
            "currentStage": { "type": "string" }
        },
        "required": ["candidateId", "appliedOn", "currentStage"]
    }
  },
  "auth": {
    "providers": ["password", "google.com"]
  },
  "firestore": {
    "/candidates/{userId}": {
      "schema": { "$ref": "#/entities/CandidateProfile" },
      "description": "Stores detailed profiles for candidate users."
    },
    "/candidates/{userId}/jobApplications/{jobId}": {
      "schema": { "$ref": "#/entities/Application" },
      "description": "Stores a candidate's applications to jobs."
    },
     "/candidates/{userId}/internshipApplications/{internshipId}": {
      "schema": { "$ref": "#/entities/Application" },
      "description": "Stores a candidate's applications to internships."
    },
    "/employers/{userId}": {
      "schema": { "$ref": "#/entities/EmployerProfile" },
      "description": "Stores detailed profiles for employer users."
    },
    "/institutes/{userId}": {
      "schema": { "$ref": "#/entities/InstituteProfile" },
      "description": "Stores detailed profiles for TPO/institute users."
    },
    "/jobs/{jobId}": {
      "schema": { "$ref": "#/entities/Job" },
      "description": "Stores all job postings."
    },
     "/jobs/{jobId}/applicants/{candidateId}": {
      "schema": { "$ref": "#/entities/Applicant" },
      "description": "Stores applicants for a specific job."
    },
    "/internships/{internshipId}": {
        "schema": { "$ref": "#/entities/Internship" },
        "description": "Stores all internship postings."
    },
    "/internships/{internshipId}/applicants/{candidateId}": {
      "schema": { "$ref": "#/entities/Applicant" },
      "description": "Stores applicants for a specific internship."
    }
  }
}

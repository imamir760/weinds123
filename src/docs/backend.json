{
  "entities": {
    "User": {
      "title": "User",
      "description": "Represents a user for authentication purposes.",
      "type": "object",
      "properties": {
        "uid": {
          "type": "string",
          "description": "The user's unique ID."
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "The user's email address."
        },
        "displayName": {
          "type": "string",
          "description": "The user's display name, which could be a person's name, company name, or institution name."
        },
        "role": {
          "type": "string",
          "description": "The user's role.",
          "enum": ["candidate", "employer", "tpo"]
        },
        "createdAt": {
            "type": "string",
            "format": "date-time",
            "description": "The timestamp when the user was created."
        }
      },
      "required": ["uid", "email", "role", "createdAt"]
    },
    "CandidateProfile": {
      "title": "Candidate Profile",
      "description": "Stores detailed profile information for a candidate.",
      "type": "object",
      "properties": {
        "fullName": { "type": "string" },
        "email": { "type": "string", "format": "email" },
        "headline": { "type": "string" },
        "skills": { 
          "type": "array", 
          "description": "An array of the candidate's skills.",
          "items": { "type": "string" }
        },
        "experience": { 
          "type": "array",
          "description": "A list of the candidate's work experiences.",
          "items": {
            "type": "object",
            "properties": {
              "jobTitle": { "type": "string" },
              "company": { "type": "string" },
              "duration": { "type": "string" }
            }
          }
        },
        "education": { 
          "type": "array",
          "description": "A list of the candidate's educational qualifications.",
          "items": {
            "type": "object",
            "properties": {
              "institution": { "type": "string" },
              "degree": { "type": "string" },
              "year": { "type": "string" }
            }
          }
        },
        "location": { "type": "string" },
        "employmentStatus": { "type": "string", "enum": ["Fresher", "Working", "Studying"] },
        "preference": { "type": "string", "enum": ["Job", "Internship", "Both"] },
        "achievements": { "type": "string", "description": "A summary of the candidate's achievements." },
        "projects": { "type": "string", "description": "A summary of the candidate's projects, including URLs." },
        "phone": { "type": "string" }
      }
    },
    "EmployerProfile": {
      "title": "Employer Profile",
      "description": "Stores detailed profile information for an employer.",
      "type": "object",
      "properties": {
        "companyName": { "type": "string" },
        "email": { "type": "string", "format": "email" },
        "website": { "type": "string", "format": "uri" },
        "tagline": { "type": "string" },
        "description": { "type": "string" },
        "industry": { "type": "string" },
        "companySize": { "type": "string" }
      }
    },
    "InstituteProfile": {
      "title": "Institute Profile",
      "description": "Stores detailed profile information for a TPO's institution.",
      "type": "object",
      "properties": {
        "institutionName": { "type": "string" },
        "tpoEmail": { "type": "string", "format": "email" },
        "website": { "type": "string", "format": "uri" },
        "description": { "type": "string" },
        "tpoName": { "type": "string" }
      }
    },
    "Job": {
      "title": "Job",
      "description": "Represents a job posting.",
      "type": "object",
      "properties": {
        "title": {
          "type": "string",
          "description": "The title of the job."
        },
        "responsibilities": {
            "type": "string",
            "description": "The responsibilities of the job."
        },
        "skills": {
          "type": "string",
          "description": "A comma-separated list of required skills."
        },
        "experience": {
            "type": "string",
            "description": "Required years of experience."
        },
        "salary": {
          "type": "string",
          "description": "The salary for the job."
        },
        "location": {
            "type": "string",
            "description": "The location of the job."
        },
        "workMode": {
            "type": "string",
            "enum": ["Remote", "Hybrid", "On-site"]
        },
        "education": {
            "type": "string",
            "description": "The education requirements for the job."
        },
        "employerId": {
          "type": "string",
          "description": "The UID of the employer who posted the job."
        },
        "createdAt": {
          "type": "string",
          "format": "date-time",
          "description": "The timestamp when the job was created."
        },
        "pipeline": {
            "type": "array",
            "description": "The configured hiring pipeline stages.",
            "items": {
                "type": "object",
                "properties": {
                    "stage": { "type": "string" },
                    "type": { "type": "string" }
                }
            }
        }
      },
      "required": ["title", "responsibilities", "skills", "employerId", "createdAt"]
    },
    "Internship": {
      "title": "Internship",
      "description": "Represents an internship posting.",
      "type": "object",
      "properties": {
        "title": {
          "type": "string",
          "description": "The title of the internship."
        },
        "responsibilities": {
            "type": "string",
            "description": "The responsibilities of the internship."
        },
        "skills": {
          "type": "string",
          "description": "A comma-separated list of required skills."
        },
        "experience": {
            "type": "string",
            "description": "Required years of experience."
        },
        "stipend": {
            "type": "string",
            "description": "The monthly stipend for the internship."
        },
        "duration": {
            "type": "string",
            "description": "The duration of the internship (e.g., '3 months')."
        },
        "location": {
            "type": "string",
            "description": "The location of the internship."
        },
        "workMode": {
            "type": "string",
            "enum": ["Remote", "Hybrid", "On-site"]
        },
        "education": {
            "type": "string",
            "description": "The education requirements for the internship."
        },
        "employerId": {
          "type": "string",
          "description": "The UID of the employer who posted the internship."
        },
        "createdAt": {
          "type": "string",
          "format": "date-time",
          "description": "The timestamp when the internship was created."
        },
        "pipeline": {
            "type": "array",
            "description": "The configured hiring pipeline stages.",
            "items": {
                "type": "object",
                "properties": {
                    "stage": { "type": "string" },
                    "type": { "type": "string" }
                }
            }
        }
      },
      "required": ["title", "responsibilities", "skills", "employerId", "createdAt"]
    }
  },
  "auth": {
    "providers": ["password", "google.com"]
  },
  "firestore": {
    "/candidates/{userId}": {
      "schema": {
        "$ref": "#/entities/CandidateProfile"
      },
      "description": "Stores detailed profiles for candidate users."
    },
    "/employers/{userId}": {
      "schema": {
        "$ref": "#/entities/EmployerProfile"
      },
      "description": "Stores detailed profiles for employer users."
    },
    "/institutes/{userId}": {
      "schema": {
        "$ref": "#/entities/InstituteProfile"
      },
      "description": "Stores detailed profiles for TPO/institute users."
    },
    "/jobs/{jobId}": {
      "schema": {
        "$ref": "#/entities/Job"
      },
      "description": "Stores all job postings."
    },
    "/internships/{internshipId}": {
        "schema": {
            "$ref": "#/entities/Internship"
        },
        "description": "Stores all internship postings."
    }
  }
}
